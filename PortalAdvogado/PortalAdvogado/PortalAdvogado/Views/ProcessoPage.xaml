<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PortalAdvogado.Views.ProcessoPage">

    <StackLayout>
        <Frame Padding="5" BackgroundColor="LightGray" HorizontalOptions="FillAndExpand">
            <Label Text="{Binding NumProcesso, StringFormat='Processo nº {0}'}" FontSize="Medium" TextColor="DarkGreen"/>
        </Frame>
        <Frame BackgroundColor="LightGray" HorizontalOptions="FillAndExpand">
            <Grid WidthRequest="10000" ColumnSpacing="0" RowSpacing="0" HorizontalOptions="FillAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="Nº Único: " Grid.Column="0" Grid.Row="0" FontSize="Small" FontAttributes="Bold"></Label>
                <Label Text="{Binding NumeroUnico}" Grid.Column="1" Grid.Row="0" FontSize="Small"/>
                <Label Text="Data da Distribuição: " Grid.Column="0" Grid.Row="1" FontSize="Small" FontAttributes="Bold"></Label>
                <Label Text="{Binding DataDistribuicao}" Grid.Column="1" Grid.Row="1" FontSize="Small"/>
                <Label Text="Assunto: " Grid.Column="0" Grid.Row="2" FontSize="Small" FontAttributes="Bold"></Label>
                <Label Text="{Binding Assunto}" Grid.Column="1" Grid.Row="2" FontSize="Small"/>
                <Label Text="Competência: " Grid.Column="0" Grid.Row="3" FontSize="Small" FontAttributes="Bold"></Label>
                <Label Text="{Binding Competencia}" Grid.Column="1" Grid.Row="3" FontSize="Small"/>
                <Label Text="Última fase: " Grid.Column="0" Grid.Row="4" FontSize="Small" FontAttributes="Bold"></Label>
                <Label Text="{Binding UltimaFase}" Grid.Column="1" Grid.Row="4" FontSize="Small"/>
            </Grid>
        </Frame>
        <ListView x:Name="ProcessosListView" Margin="10" IsVisible="false" SeparatorVisibility="None" HasUnevenRows="true" ItemsSource="{Binding processos}" IsEnabled="false">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid WidthRequest="10000" ColumnSpacing="0" RowSpacing="0" HorizontalOptions="FillAndExpand">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="Fases" Grid.Column="0" Grid.Row="0" FontSize="Small" FontAttributes="Bold"></Label>
                            <Label Text="{Binding QtdFases}" Grid.Column="1" Grid.Row="0" FontSize="Small"/>
                            <Label Text="Movimentos" Grid.Column="0" Grid.Row="2" FontSize="Small" FontAttributes="Bold"></Label>
                            <Label Text="{Binding QtdMovimentos}" Grid.Column="1" Grid.Row="2" FontSize="Small"/>
                            <Label Text="Decisões" Grid.Column="0" Grid.Row="3" FontSize="Small" FontAttributes="Bold"></Label>
                            <Label Text="{Binding QtdDecisoes}" Grid.Column="1" Grid.Row="3" FontSize="Small"/>
                            <Label Text="Partes e Advogados" Grid.Column="0" Grid.Row="4" FontSize="Small" FontAttributes="Bold"></Label>
                            <Label Text="{Binding QtdPartes}" Grid.Column="1" Grid.Row="4" FontSize="Small"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>